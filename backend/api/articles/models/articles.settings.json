{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "published": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string"
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "claps": {
      "type": "integer",
      "default": 0
    },
    "timeToComplete": {
      "type": "decimal",
      "required": true
    },
    "requiredItems": {
      "type": "richtext",
      "required": false
    },
    "tags": {
      "collection": "tags",
      "via": "articles",
      "dominant": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ]
    }
  }
}
