{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "published": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string"
    },
    "difficulty": {
      "type": "integer",
      "required": true,
      "max": 5,
      "min": 1
    },
    "tags": {
      "collection": "tags",
      "via": "article"
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "claps": {
      "type": "integer",
      "default": 0
    }
  }
}
